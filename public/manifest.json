{
  "name": "Discovemail",

  "description": "Discovemail - Smart email verification tool for finding and checking emails",

  "version": "1.0.1",

  "manifest_version": 3,

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],


  "browser_action": {
    "default_popup": "popup.html"
  },

  "host_permissions": ["<all_urls>"],

  "action": {
    "default_title": "Discovemail",

    "default_popup": "index.html",

    "default_icon": {
      "16": "Logo.png",

      "128": "Logo.png"
    }
  },

 "background": {
    "service_scripts": ["background.js"],
    "service_persistent": false
  }
}
